@using WebSolution.Web.Infrastructure.Security;
@{
    ICurrentUser CurrentUser = ViewBag.CurrentUser;
}

<!DOCTYPE html>
<html lang="en" ng-app="angularJsApp" ng-controller="ApplicationController">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>AngularJs Application</title>

    <!-- Infrastructure - jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Client/Infrastructure/jquery/jquery-3.1.1.min.js"></script>

    <!-- Infrastructure - AngularJs -->
    <script src="~/Client/Infrastructure/angularjs/angular.min.js"></script>
    <script src="~/Client/Infrastructure/angularjs/angular-sanitize.min.js"></script>
    <script src="~/Client/Infrastructure/angularjs/angular-translate.js"></script>

    <!-- Infrastructure - AngularJs Extensions -->
    <script src="~/Client/Infrastructure/angularjs-ext/ui-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/Client/Infrastructure/angularjs-ext/ui-router/angular-ui-router.min.js"></script>
    <script src="~/Client/Infrastructure/angularjs-ext/dialogs/dialogs.js"></script>

    <!-- Infrastructure - Bootstrap -->
    <link href="~/Client/Infrastructure/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Client/Infrastructure/bootstrap/js/bootstrap.min.js"></script>

    <!-- Infrastructure - Bootstrap Additional CSS -->
    <link href="~/Client/Infrastructure/css/dashboard.css" rel="stylesheet">

    <!-- Application -->
    <script src="~/Client/Application/app.js"></script>
    <script src="~/Client/Application/controllers/ApplicationController.js"></script>
    <script src="~/Client/Application/controllers/DashboardController.js"></script>
    <script src="~/Client/Application/controllers/RoleListViewController.js"></script>
    <script src="~/Client/Application/controllers/RoleAddEditController.js"></script>
    <script src="~/Client/Application/controllers/UserListViewController.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand">AngularJs Application</span>
            </div>
            <div class="navbar-collapse collapse">
                <div class="navbar-form navbar-right">
                    <span style="color:white">@CurrentUser.RoleName</span>
                    <span style="color:white">@CurrentUser.DisplayName</span>
                    <span style="color:white">&nbsp;</span>
                    <button class="btn btn-success" onclick="location.href='@Url.Action("Logout", "Application")'">Log Out</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li ng-repeat="module in Modules">
                        <a href="#{{module.Url}}" ng-bind="module.Name"></a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" ui-view></div>
        </div>
    </div>

</body>
</html>