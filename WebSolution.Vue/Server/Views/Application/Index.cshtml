@using WebSolution.Web.Infrastructure.Security;
@{
    ICurrentUser CurrentUser = ViewBag.CurrentUser;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Vue Application</title>

    <!-- Infrastructure - jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Client/Infrastructure/jquery/jquery-3.1.1.min.js"></script>

    <!-- Infrastructure - Vue -->
    <script src="https://unpkg.com/vue"></script>
    <script src="https://unpkg.com/vue-router"></script>
    <script src="https://unpkg.com/vue-resource"></script>

    <!-- Infrastructure - Bootstrap -->
    <link href="~/Client/Infrastructure/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Client/Infrastructure/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Client/Infrastructure/bootstrap/js/bootstrap-confirmation.min.js"></script>

    <!-- Infrastructure - Bootstrap Additional CSS -->
    <link href="~/Client/Infrastructure/css/dashboard.css" rel="stylesheet">
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand">Vue Application</span>
            </div>
            <div class="navbar-collapse collapse">
                <div class="navbar-form navbar-right">
                    <span style="color:white">@CurrentUser.RoleName</span>
                    <span style="color:white">@CurrentUser.DisplayName</span>
                    <span style="color:white">&nbsp;</span>
                    <button class="btn btn-success" onclick="location.href='@Url.Action("Logout", "Application")'">Log Out</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" id="app">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <modules></modules>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <router-view></router-view>
            </div>
        </div>
    </div>

    <!-- Application -->
    <script src="~/Client/Application/app-dependencies.js"></script>
    <script src="~/Client/Application/components/modalDialog.js"></script>
    <script src="~/Client/Application/modules/modules.js"></script>
    <script src="~/Client/Application/modules/dashboard/dashboard.js"></script>
    <script src="~/Client/Application/modules/roles/role/role.js"></script>
    <script src="~/Client/Application/modules/roles/roles.js"></script>
    <script src="~/Client/Application/modules/users/users.js"></script>
    <script src="~/Client/Application/app-routing.js"></script>
    <script src="~/Client/Application/app.js"></script>
    <script src="~/Client/Application/ui.js"></script>
</body>
</html>